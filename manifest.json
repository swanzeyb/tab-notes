{
  "icons": {
    "48": "icons/48.png",
    "96": "icons/96.png",
    "128": "icons/128.png",
    "256": "icons/256.png"
  },
  "manifest_version": 3,
  "name": "Tab Notes",
  "version": "4.0.0",
  "description": "Allow you to write anything in new tab",
  "permissions": ["storage", "unlimitedStorage"],
  "chrome_url_overrides": {
    "newtab": "md-notes/md-renderer/dist/index.html"
  },

  "action": {
    "browser_style": true,
    "default_icon": "icons/48.png",
    "default_title": "Tab notes",
    "default_popup": "md-notes/md-renderer/dist/index.html"
  },

  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+U",
        "mac": "Command+U"
      }
    }
  }
}
